{
  "name": "hostpilot",
  "private": true,
  "version": "0.1.0",
  "description": "A premium hosts file manager for Linux and macOS.",
  "author": "Jp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "iconv-lite": "^0.7.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.hostpilot.app",
    "productName": "HostPilot by Jp",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "category": "Development",
      "maintainer": "Jp <jp@example.com>",
      "icon": "build/icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
